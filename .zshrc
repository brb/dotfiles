function start_ssh-agent () {
    if (( `ps ax|grep -c "ssh-agent"` == 1 ))
    then
        ssh-agent | sed 's/^echo/#echo/' > ~/.ssh-env
    fi
    source ~/.ssh-env
}

start_ssh-agent

source ~/.profile
